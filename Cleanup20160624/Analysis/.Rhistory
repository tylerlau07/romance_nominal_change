FreqVC <- ditr$Freq_VC
log_FreqVC <- log(ditr$Freq_VC)  # = log(a)
assoc <- cbind(Attract,FreqVC,dP.cueCx,log_Attr,log_FreqVC)
corrgram(assoc,lower.panel=panel.pts,upper.panel=panel.conf,diag.panel=panel.density)
